      <chart>
        <search base="duration_search">
          <query>|  where delta &gt; 60*0 and delta &lt; 60*180
| eval delta = delta/60
| eval date_hour=mvindex(split(orig, ":"), 0)
| chart median(delta) perc90(delta) over date_hour by date_wday</query>
        </search>
